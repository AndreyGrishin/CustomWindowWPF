<Application
    x:Class="CustomWindow.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!--  Resource Dictionaries  -->
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="Themes/DarkStyle.xaml" />-->
                <ResourceDictionary Source="Themes/LightStyle.xaml" />
                <ResourceDictionary Source="Themes/CustomWindow.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="TitleTextBlockStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="TextWrapping" Value="NoWrap"/>
                <Setter Property="TextTrimming" Value="None"/>
                <Setter Property="Foreground" Value="{DynamicResource ColorfulColor}"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
