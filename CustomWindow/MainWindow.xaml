<Window
    x:Class="CustomWindow.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CustomWindow"
    Width="650"
    Height="450"
    Icon="Resources/AppIcon.ico"
    Style="{DynamicResource CustomWindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid >
        <StackPanel Margin="0,20,0,0">
            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <TextBlock TextWrapping="Wrap" Text="THEME" Style="{DynamicResource TitleTextBlockStyle}"/>
                <TextBlock TextWrapping="Wrap" Text="Select application theme:" Margin="0,5,0,0"/>
                <RadioButton></RadioButton>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="20,20,0,0">
                <TextBlock TextWrapping="Wrap" Text="COLORS" Style="{DynamicResource TitleTextBlockStyle}"/>
                <TextBlock TextWrapping="Wrap" Text="Select application color:" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
